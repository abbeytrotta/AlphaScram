<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:baselineAligned="false" android:background="@drawable/chalkboard">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points: "
                android:id="@+id/pointsLabel"
                android:textColor="#ffffff"
                android:layout_alignParentLeft="true" android:layout_marginLeft="35px"
                android:layout_alignParentTop="true" android:layout_marginTop="35px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/score"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35px" android:layout_marginLeft="110px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Left: "
                android:id="@+id/timeLeftLabel"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true" android:layout_marginTop="35px" android:layout_marginLeft="240px"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="60"
                  android:id="@+id/txtTimeLeft" android:textColor="#ffffff" android:layout_alignParentTop="true"
                  android:layout_marginTop="35px" android:layout_marginLeft="350px"/>
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer"
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:layout_marginTop="65px" android:layout_marginLeft="350px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORD"
                android:id="@+id/textWord"
                android:textColor="#ffffff" android:textSize="48px"
                android:layout_alignParentTop="true"
                android:layout_marginTop="125px" android:layout_centerHorizontal="true"/>


        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360px"
                android:layout_marginTop="250px" android:id="@+id/frmEnter" android:onClick="onEnter">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEnter" android:layout_gravity="center"
                    android:background="@drawable/button_empty" android:baselineAlignBottom="false"
                    android:onClick="onEnter"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:id="@+id/txtEnter" android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35px"
                android:layout_marginTop="250px" android:id="@+id/frmPass">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagePass" android:layout_gravity="center"
                    android:background="@drawable/button_empty" android:baselineAlignBottom="false"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass"
                    android:id="@+id/txtPass" android:layout_gravity="center"/>
        </FrameLayout>



        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35px"
                android:layout_marginTop="350px" android:id="@+id/frmVowelA" android:onClick="onLetterClickA">

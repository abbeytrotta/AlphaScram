                    android:textSize="28px"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135px"
                android:layout_marginTop="550px" android:id="@+id/frmLetter6" android:onClick="onLetterClick6">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgLetter6" android:layout_gravity="right|center_vertical"
                    android:background="@drawable/button_empty_big" android:baselineAlignBottom="false"
                    android:textSize="28px"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" H "
                    android:id="@+id/txtLetter6" android:phoneNumber="false" android:layout_gravity="center"
                    android:textSize="28px"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240px"
                android:layout_marginTop="550px" android:id="@+id/frmLetter7" android:onClick="onLetterClick7">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgLetter7" android:layout_gravity="center"
                    android:background="@drawable/button_empty_big" android:baselineAlignBottom="false"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" I "
                    android:id="@+id/txtLetter7" android:phoneNumber="false" android:layout_gravity="center"
                    android:textSize="28px"/>

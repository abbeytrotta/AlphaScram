            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" A "
                    android:id="@+id/txtVowelA" android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"

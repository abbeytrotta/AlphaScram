        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350px"
                android:layout_marginTop="550px" android:id="@+id/frmLetter8" android:onClick="onLetterClick8">
            <ImageView
                    android:layout_width="wrap_content"
